@model BuildingAndFreezerApp.Models.Employess

@{
    ViewBag.Title = "Create";
}

<h2 class="alert alert-success text-center"> اضافة</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.empName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.empName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.empName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="اضافة" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة للقائمة السابقة", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
