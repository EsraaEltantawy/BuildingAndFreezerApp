@model IEnumerable<BuildingAndFreezerApp.Models.Building>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-warning text-center">طباعة التقرير</h2>

@*<p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>*@
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th class="text-center">
            اسم العمارة
        </th>

        <th class="text-center">تقرير الحجوزات</th>
        <th class="text-center">تقرير مواد البناء</th>
        <th class="text-center">تقرير العمال</th>
        <th class="text-center">تقرير النثريات</th>
        <th class="text-center">صافى الربح</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.buildName)
            </td>

            <td>
                @Html.ActionLink("تقرير حجوزات", "DetailsBuilding", new { id = item.id }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("تقرير مواد البناء", "DetailsMatrial", new { id = item.id }, new { @class = "btn btn-primary" })
            </td>
            <td>
                @Html.ActionLink("تقرير العمال", "DetailsEmployees", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
            <td>
                @Html.ActionLink("تقرير النثريات", "DetailsNonWorks", new { id = item.id }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("صافى الربح", "Profit", new { id = item.id }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    }

</table>
