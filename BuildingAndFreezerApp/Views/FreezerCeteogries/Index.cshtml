@model IEnumerable<BuildingAndFreezerApp.Models.FreezerCeteogry>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-success text-center">الاصناف</h2>

<p>
    @Html.ActionLink("اضافة جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-borderless table-bordered table-hover table-striped">
    <tr class=" alert alert-danger table-active table-warning">
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerSmall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerLarge)
        </th>
        <th>تعديل</th>
        <th>حذف</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerSmall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerLarge)
            </td>
            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.id }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
