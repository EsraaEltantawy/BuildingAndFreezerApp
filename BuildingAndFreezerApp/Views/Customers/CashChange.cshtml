@model BuildingAndFreezerApp.Models.Customer

@{
    ViewBag.Title = "CashChange";
}

<h2 class="alert alert-success text-center"> دفع اقساط</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (ViewBag.Change)
    {
        <div class="panel">
            <div class="panel-body panel-warning">
                <p class="panel-heading text-center">
                    المدفوع اكبر من المتبقى من فضلك دخل قيمة اقل من المتبقى او بتساويه
                </p>
            </div>
        </div>
    }
    <div class="form-horizontal">
        <h4>Customers</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.Label("المتبقى", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("reminderChange", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("reminderChange", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("العودة للقائمة السابقة", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
