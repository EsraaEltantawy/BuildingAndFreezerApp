@model IEnumerable<BuildingAndFreezerApp.Models.NonWork>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-success text-center">مصاريف الاعمال النثرية</h2>

<p>
    @Html.ActionLink("اضافة جديد", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-borderless table-bordered table-hover table-striped">
    <tr class="table alert alert-danger table-active table-warning">
        <th>
            @Html.DisplayNameFor(model => model.Building.buildName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.NonWorksTable.nonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Det)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prices)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>

        <th>تعديل</th>
        <th>حذف</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Building.buildName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NonWorksTable.nonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Det)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prices)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>

            <td>
                @Html.ActionLink("تعديل", "Edit", new { id = item.id }, new { @class = "btn btn-success" })

            </td>
            <td>
                @Html.ActionLink("حذف", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
